include header.pug
	tr
		td(bgcolor="#ffffff" style="padding: 20px 30px 40px 30px;")
			table(border="0" bgcolor="#ffffff" cellpadding="0" cellspacing="0" width="100%" style="padding: 10px 10px 10px 10px;")
				tr
					td(align="center" style="font-size: 13px; color: #aaaaaa")
						p Order from #[a(style="color: 9a96c9;" href='mailto:#{email}' ) #{email}] (#{name})
				each item, index in cart_items
					tr
						td(style="padding: 10px 0px 0px 0px;")
							table(border="0" cellpadding="0" cellspacing="0" width="100%")
								tr
									td(width="150" height="150" valign="top")
										img(src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/52/Liliumbulbiferumflowertop.jpg/220px-Liliumbulbiferumflowertop.jpg" alt="Flower" width="150" height="150" style="display: block;")
									td(width="320" valign="top")
										table
											tr
												td
													strong #{item.dbBouquet.name} - #{item.dbSrp.name}
											tr
												td
													p #{item.dbBouquet.description}
											td(style="font-size: 9px; color: #eaeaea")
													p Also sent to #{item.uniqueEmailsString}
									td(width="20" valign="top")
										p= item.dbSrp.srp;
				tr
					td(style="padding: 10px 0px 0px 0px;")
						strong= note
						p(style="margin: 1px 0px 0px 0px;") Lorem ipsum
	include footer.pug
